<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_content">

    <TextView
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:text="Patient ID"
        android:textColor="@android:color/background_dark"/>

    <EditText
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ID"
        android:layout_below="@+id/ID"
        android:ems="5"
        android:inputType="textPersonName"
        android:hint="ID" />

    <EditText
        android:id="@+id/ageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/idText"
        android:layout_alignBottom="@+id/idText"
        android:layout_toRightOf="@id/idText"
        android:ems="5"
        android:inputType="number"
        android:hint="Age"/>

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ageText"
        android:layout_alignTop="@+id/ID"
        android:textColor="@android:color/background_dark"
        android:text="Age" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/age"
        android:textColor="@android:color/background_dark"
        android:layout_toEndOf="@+id/ageText"
        android:text="Name" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_alignTop="@+id/ageText"
        android:ems="5"
        android:inputType="textPersonName"
        android:hint="Name"/>

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rg1"
        android:layout_below="@+id/idText"
        android:layout_marginTop="5dp"
        android:text="Sex"
        android:textColor="@android:color/background_dark"/>

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/idText"
        android:layout_below="@id/sex"
        android:tooltipText="Sex">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

    <Button
        android:id="@+id/run_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sex"
        android:layout_toEndOf="@+id/idText"
        android:layout_toStartOf="@+id/stop_button"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="RUN" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/run_button"
        android:layout_alignBottom="@+id/run_button"
        android:layout_alignEnd="@+id/nameText"
        android:layout_alignStart="@+id/nameText"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Stop"
        android:textColor="@android:color/white" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:id="@+id/graph_X_id"
        android:layout_below="@+id/rg1"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        />
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:id="@+id/graph_Y_id"
        android:layout_below="@+id/rg1"
        android:layout_marginTop="165dp"
        android:layout_alignParentStart="true"
        />
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:id="@+id/graph_Z_id"
        android:layout_below="@+id/rg1"
        android:layout_marginTop="315dp"
        android:layout_alignParentStart="true"
        />


    <TextView
        android:id="@+id/debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg1"
        android:layout_toEndOf="@+id/sex"
        android:text="TextView" />

    <Button
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/run_button"
        android:layout_alignStart="@+id/run_button"
        android:layout_below="@+id/run_button"
        android:text="Download" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameText"
        android:layout_below="@+id/stop_button"
        android:layout_toEndOf="@+id/run_button"
        android:text="Upload" />


</RelativeLayout>